{
  "name": "ProjectInvoice",
  "version": "2.2.19",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "test": "cypress run",
    "version": "next-version package.json src/config/index.js",
    "version:minor": "npm run version -- --minor",
    "version:major": "npm run version -- --major",
    "version:release": "release.bat",
    "version:changelog": "changelog.bat",
    "icons": "node task/icons --source public/static/img/logo.svg --target public/static/img --sizes 16,32,320x460,48,57,64,72,96,114,144,168,128,192,196,256,512",
    "favicon": "svg2png public/static/img/logo.svg --output=public/static/img/favicon.png --width=16 --height=16 --overwrite",
    "markdown": "node task/parseMarkdown --source=README.md --target=src/views/About.html",
    "markdown:changelog": "node task/parseMarkdown --source=CHANGELOG.md --target=src/views/Changelog.html",
    "icomoon": "node task/icomoon --source icomoon.zip --target public/fonts/ --targetFile src/style/_icons.scss",
    "faker": "node task/fakeData",
    "cypress": "cypress open",
    "svg": "svgo -f design",
    "sitemap": "node task/sitemap"
  },
  "dependencies": {
    "animejs": "^2.2.0",
    "current-device": "^0.7.2",
    "dialog-polyfill": "^0.4.9",
    "marked": "^0.3.12",
    "moment": "^2.20.1",
    "register-service-worker": "^1.1.0",
    "sass.js": "^0.10.9",
    "signals": "^1.0.0",
    "vue": "^2.5.13",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-alpha.8",
    "@vue/cli-plugin-eslint": "^3.0.0-alpha.8",
    "@vue/cli-plugin-pwa": "^3.0.0-alpha.8",
    "@vue/cli-service": "^3.0.0-alpha.8",
    "adm-zip": "^0.4.7",
    "commander": "^2.14.1",
    "cypress": "^2.1.0",
    "eslint-plugin-html": "^4.0.2",
    "faker": "^4.1.0",
    "github-release-notes": "^0.15.0",
    "jsdom": "^11.6.2",
    "lint-staged": "^6.0.0",
    "next-version": "^0.11.7",
    "node-sass": "^4.7.2",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.20.1",
    "svg2png": "^4.1.1",
    "svgo": "^1.0.5",
    "vue-template-compiler": "^2.5.13",
    "vuedraggable": "^2.16.0",
    "xml2js": "^0.4.19"
  },
  "babel": {
    "presets": [
      "@vue/app"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ]
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "npm run version"
  }
}

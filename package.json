{
  "name": "project-invoice",
  "version": "1.3.19",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "opn \"http://localhost:4201\" & ng serve --port 4201",
    "build": "npm run markdown & ng build --prod --env=prod --aot=false --output-hashing=none",
    "build:test": "npm run build & npm run build:serve",
    "build:serve": "cd dist && live-server --port=4203 --host=localhost --entry-file=/index.html",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "version": "next-version package.json .angular-cli.json src/invoice.appcache src/app/component/footer/footer.component.html",
    "version:minor": "npm run version -- --minor",
    "version:major": "npm run version -- --major",
    "icon": "npm run icon:fav & npm run icon:iosstart & npm run icon:ios57 & npm run icon:ios72 & npm run icon:ios114 & npm run icon:android196 & npm run icon:android128",
    "icon:fav": "svg2png src/static/img/logo.svg --output=src/static/img/favicon.png --width=16 --height=16 --overwrite",
    "icon:iosstart": "svg2png src/static/img/logo.svg --output=src/static/img/icon-320x460.png --width=320 --height=460 --overwrite",
    "icon:ios57": "svg2png src/static/img/logo.svg --output=src/static/img/icon-57x57.png --width=57 --height=57 --overwrite",
    "icon:ios72": "svg2png src/static/img/logo.svg --output=src/static/img/icon-72x72.png --width=72 --height=72 --overwrite",
    "icon:ios114": "svg2png src/static/img/logo.svg --output=src/static/img/icon-114x114.png --width=114 --height=114 --overwrite",
    "icon:android196": "svg2png src/static/img/logo.svg --output=src/static/img/icon-196x196.png --width=196 --height=196 --overwrite",
    "icon:android128": "svg2png src/static/img/logo.svg --output=src/static/img/icon-128x128.png --width=128 --height=128 --overwrite",
    "markdown": "node task/parseMarkdown --source=README.md --target=src/app/page/about/about.component.html"
  },
  "precommit": {
    "run": "version"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^4.2.2",
    "@angular/common": "^4.2.2",
    "@angular/compiler": "^4.2.2",
    "@angular/core": "^4.2.2",
    "@angular/forms": "^4.2.2",
    "@angular/http": "^4.2.2",
    "@angular/platform-browser": "^4.2.2",
    "@angular/platform-browser-dynamic": "^4.2.2",
    "@angular/router": "^4.2.2",
    "@ngtools/json-schema": "^1.1.0",
    "bootstrap": "^4.0.0-alpha.6",
    "core-js": "^2.4.1",
    "html2canvas": "^0.5.0-beta4",
    "lodash": "^4.17.4",
    "rxjs": "^5.1.0",
    "sass.js": "^0.10.4",
    "signals": "^1.0.0",
    "ts-helpers": "^1.1.1",
    "marked": "^0.3.6",
    "zone.js": "^0.8.4"
  },
  "devDependencies": {
    "@angular/cli": "^1.3.0-beta.0",
    "@angular/compiler-cli": "^4.2.2",
    "@angular/language-service": "^4.2.2",
    "@types/jasmine": "2.5.45",
    "@types/marked": "0.0.28",
    "@types/node": "~6.0.60",
    "codelyzer": "~3.0.1",
    "jasmine-core": "~2.6.2",
    "jasmine-spec-reporter": "~4.1.0",
    "jsdom": "^11.0.0",
    "karma": "~1.7.0",
    "karma-chrome-launcher": "~2.1.1",
    "karma-cli": "~1.0.1",
    "karma-coverage-istanbul-reporter": "^0.2.0",
    "karma-jasmine": "~1.1.0",
    "karma-jasmine-html-reporter": "^0.2.2",
    "next-version": "^0.11.7",
    "node-sass": "^4.5.3",
    "opn-cli": "^3.1.0",
    "pre-commit": "^1.2.2",
    "protractor": "~5.1.2",
    "svg2png": "^4.1.1",
    "ts-node": "~3.0.4",
    "tslint": "~5.3.2",
    "typescript": "^2.3.4",
    "webpack": "^2.6.1"
  }
}
